<div class="card mb-4">
    {% if property.filename %}
        <img src="{{ vich_uploader_asset(property, 'imageFile') }}" alt="" class="card-img-top" style="width: 100%; height: auto;">
    {% else %}
        <img src="{{ '/images/properties/default.jpg' }}" alt="">
    {% endif %}
    <div class="card-body text-center">
        <h5 class="card-title">
            <a href="{{ path('property.show',
                {id: property.id, slug: property.slug}) }}">
                {{ property.title }}
            </a>
        </h5>
        <p class="card-text">
            {{ property.surface }} m² - {{ property.city }} ({{ property.postalCode }})
        </p>
        <div class="text-primary" style="font-size: 2rem; font-weight: bold;">
            {{ property.formattedPrice }} €
        </div>
    </div>
</div>